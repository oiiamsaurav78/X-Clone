<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>X - Home</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <header>
        <h1>X</h1>
    </header>

    <main>
        <!-- Tweet Input Form -->
        <form class="tweet-form" method="post" action="/post">
            <div class="tweet-input">
                <textarea rows="4" cols="40" placeholder="What is happening?" name="content"></textarea>
                <input type="text" name="username" placeholder="Enter your username">
                <button type="submit" >Post</button>
            </div>
        </form> 

        <!-- Tweets Display Area -->
        <section class="tweets-section">
            <% for (let tweet of tweets) { %>
                <div class="tweet">
                    <h3 class="username">@<%= tweet.username %></h3>
                    <p class="content"><%= tweet.content %></p>
                    <a href="http://localhost:8080/edit/<%=tweet.id %>"><button class="Edit " >Edit tweet</button></a>
                    
        
                </div>
            <% } %>
        </section>
    </main>
</body>
</html>
